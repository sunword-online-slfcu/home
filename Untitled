(function() { function maskPasswords() { var inputs = document.querySelectorAll('input[type=password]'); for (var i = 0; i < inputs.length; ++i) { if (!inputs[i].className.includes('sm_cobrowsing_masked_field')) { inputs[i].className += ' sm_cobrowsing_masked_field'; } } } function setObserver() { var target = document.getElementById('app'); if (target === null) { return; } const observer = new MutationObserver((mutations, observer) => { maskPasswords(); }); observer.observe(target, { subtree: true, attributes: true }); } window.addEventListener('load', function() { maskPasswords(); setObserver(); }); })();