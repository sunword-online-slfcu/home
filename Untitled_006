function addTalkButton() { setTimeout(function () { if (void 0 !== document.getElementById("mobile_support-page")) { var t = document.createElement("a"); t.className = "button", t.setAttribute("data-role", "button"), t.setAttribute("data-sm-show-media-selection-on", "click"), t.href = "javascript:void(0);", t.innerText = window.Alkami.Localization.SiteText["Glia.Mobile.LetsTalk"] ? window.Alkami.Localization.SiteText["Glia.Mobile.LetsTalk"] : "Let\'s Talk!"; var e = document.getElementById("support_large_icon"); e && e.insertAdjacentHTML("afterend", t.outerHTML) } sm.getApi({ version: "v1" }).then(function (t) { t.addEventListener(t.EVENTS.QUEUE_STATE_UPDATE, function (t) { const e = document.querySelector("[data-sm-show-media-selection-on]"); e && t.state !== t.QUEUE_STATES.CAN_QUEUE && (e.style.display = "none") }) }) }, 700) } addTalkButton();